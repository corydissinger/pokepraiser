<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout 
        android:id="@+id/scrollableChild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    
		    <LinearLayout 
		        android:id="@+id/headerNameRow"
		        android:layout_marginTop="10sp"
		        android:layout_marginRight="50sp"		        
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:padding="14sp"
		        android:background="@color/medium_blue"
		        android:orientation="vertical">
		
			    <TextView
			        android:id="@+id/dexNo"
			        android:layout_weight="1"
		            android:layout_width="wrap_content"
		            android:layout_height="0dp"		        
			        android:gravity="left|center_vertical"
			        android:textAppearance="?android:attr/textAppearanceLarge"
			        android:textSize="14sp" />	        
				
			    <TextView
			        android:id="@+id/pokemonName"
			        android:layout_weight="2"
		            android:layout_width="wrap_content"
		            android:layout_height="0dp"		        
		            android:layout_marginLeft="10sp"
		            android:layout_marginTop="10sp"		            
			        android:gravity="left|center_vertical"
			        android:textAppearance="?android:attr/textAppearanceLarge"
			        android:textSize="22sp" />				        
		        
		    </LinearLayout>
		
		    <LinearLayout 
		        android:baselineAligned="false"
		        android:id="@+id/abilityTypeRow"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:paddingLeft="10sp"		        
		        android:layout_marginTop="10sp"		        
		        android:orientation="horizontal">
	
		        <LinearLayout
			        android:id="@+id/typeCell"
			        android:gravity="center"
			        android:layout_width="0dip"
			        android:layout_weight="1"
			        android:layout_height="wrap_content"
		        	android:orientation="vertical" >
		            
					<ImageView
					    android:id="@+id/typeOne"
				        android:gravity="center"	    
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"/>
					
					<View
					    android:id="@+id/typeSpacer"
			        	android:layout_width="0dp"			    
				        android:layout_height="12sp"
				        android:visibility="invisible"/>			
					
					<ImageView
					    android:id="@+id/typeTwo"
				        android:gravity="center"	    
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"/>
		            
		        </LinearLayout>	        
		        	        	    
		        <LinearLayout
			        android:id="@+id/abilityCell"
			        android:layout_width="0dip"
			        android:layout_weight="2"
			        android:layout_height="wrap_content"
			        android:padding="12sp"
					android:orientation="vertical" >
		     
				    <TextView
				        android:id="@+id/abilityOne"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"		        
				        android:gravity="center"
				        android:textAppearance="?android:attr/textAppearanceLarge"
				        android:textSize="14sp"
				        android:textColor="@color/clickable_text"				        
				        android:clickable="true"
				        android:onClick="openAbilityOne" />					    
		            
				    <LinearLayout 
				        android:id="@+id/abilityTwoCell"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
						android:orientation="vertical" >

						<View
				        	android:layout_width="0dp"			    
					        android:layout_height="12sp"
					        android:visibility="invisible"/>
	
					    <TextView
					        android:id="@+id/abilityTwo"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"		        
					        android:gravity="center"
					        android:textAppearance="?android:attr/textAppearanceLarge"
					        android:textSize="14sp"
					        android:textColor="@color/clickable_text"					         
					        android:clickable="true"
					        android:onClick="openAbilityTwo" />			
				        				        
				    </LinearLayout>

				    <LinearLayout 
				        android:id="@+id/abilityHiddenCell"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
						android:orientation="vertical" >				    
				    										
						<View
				        	android:layout_width="0dp"			    
					        android:layout_height="12sp"
					        android:visibility="invisible"/>					
	
					    <TextView
					        android:id="@+id/abilityHiddenLabel"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"		        
					        android:gravity="center"
					        android:textAppearance="?android:attr/textAppearanceLarge"
					        android:text="@string/hidden_ability"
					        android:textSize="14sp"  />					
						
						<View
				        	android:layout_width="0dp"			    
					        android:layout_height="12sp"
					        android:visibility="invisible"/>
	
					    <TextView
					        android:id="@+id/abilityHidden"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"		        
					        android:gravity="center"
					        android:textColor="@color/clickable_text"
					        android:textAppearance="?android:attr/textAppearanceLarge"
					        android:textSize="14sp" 
					        android:clickable="true"
					        android:onClick="openAbilityHidden" />				        
					        
				    </LinearLayout>
		            
		        </LinearLayout>	            
		        
	        </LinearLayout>
	    
	</LinearLayout>		    
		    
</ScrollView>