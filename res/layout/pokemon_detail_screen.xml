<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout 
        android:id="@+id/scrollableChild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    
		    <LinearLayout 
		        android:id="@+id/headerNameRow"
		        android:layout_marginTop="10sp"
		        android:layout_marginRight="50sp"		        
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:padding="14sp"
		        android:background="@color/medium_blue"
		        android:orientation="vertical">
		
			    <TextView
			        android:id="@+id/dexNo"
			        android:layout_weight="1"
		            android:layout_width="wrap_content"
		            android:layout_height="0dp"		        
			        android:gravity="left|center_vertical"
			        android:textAppearance="?android:attr/textAppearanceLarge"
			        android:textSize="14sp" />	        
				
			    <TextView
			        android:id="@+id/pokemonName"
			        android:layout_weight="2"
		            android:layout_width="wrap_content"
		            android:layout_height="0dp"		        
		            android:layout_marginLeft="10sp"
		            android:layout_marginTop="10sp"		            
			        android:gravity="left|center_vertical"
			        android:textAppearance="?android:attr/textAppearanceLarge"
			        android:textSize="22sp" />				        
		        
		    </LinearLayout>

		    <LinearLayout		    
		        android:baselineAligned="false"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_margin="10sp">

				<ImageView
				    android:id="@+id/pokemonPicture"
			        android:gravity="center"	    
			        android:layout_width="0dip"
			        android:layout_weight="2"				    
				    android:layout_height="wrap_content"/>
		        
		        <LinearLayout
			        android:id="@+id/typeCell"
			        android:gravity="center"
			        android:layout_width="0dip"
			        android:layout_weight="1"
			        android:layout_height="wrap_content"
		        	android:orientation="vertical"
		        	android:layout_margin="20sp"
		        	android:background="@color/light_gray" >
		            
					<ImageView
					    android:id="@+id/typeOne"
				        android:gravity="center"
		        		android:layout_marginTop="10sp"				        	    
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"/>
					
					<View
					    android:id="@+id/typeSpacer"
			        	android:layout_width="0dp"			    
				        android:layout_height="12sp"
				        android:visibility="invisible"/>			
					
					<ImageView
					    android:id="@+id/typeTwo"
				        android:gravity="center"
		        		android:layout_marginBottom="10sp"				        	    
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"/>
		            
		        </LinearLayout>			        
		        
	        </LinearLayout>

		    <LinearLayout 
		        android:id="@+id/abilityBox"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_margin="10sp"
				android:padding="10sp"				
				android:background="@color/light_gray" >			
					    
		        <TextView 
		        	android:id="@+id/abilityLabel"
		            android:layout_height="wrap_content"
			        android:layout_width="match_parent"	
			        android:layout_marginLeft="30sp"
			        android:text="@string/ability_label"  	
			        android:textSize="18sp"	/>
		        
				<View
		        	android:layout_width="0dp"			    
			        android:layout_height="12sp"
			        android:visibility="invisible"/>		        
		        
			    <LinearLayout 
			        android:id="@+id/abilityOneCell"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:weightSum="12" >		            
	            		     
				    <TextView
				        android:id="@+id/abilityOneLabel"
			            android:layout_width="0dip"
			            android:layout_height="wrap_content"
				        android:layout_weight="4"		        
				        android:gravity="right|center_vertical"
				        android:textAppearance="?android:attr/textAppearanceLarge"
				        android:textSize="12sp"
				        android:text="@string/first_ability" />
				    
					<View
			        	android:layout_width="0sp"			    
				        android:layout_height="0sp"
				        android:layout_weight="1"
				        android:visibility="invisible"/>					    					    
				        
				    <Button
				        android:id="@+id/abilityOne"
			            android:layout_width="0dip"
			            android:layout_height="wrap_content"
				        android:layout_weight="7"		        
				        android:gravity="center"
				        android:textSize="12sp"
				        android:clickable="true"
				        android:onClick="openAbilityOne" />						
				    
			    </LinearLayout>						
	            
				<View
		        	android:layout_width="0dp"			    
			        android:layout_height="12sp"
			        android:visibility="invisible"/>		    
			    
			    <LinearLayout 
			        android:id="@+id/abilityTwoCell"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
					android:orientation="horizontal" 
					android:weightSum="12" >
	
				    <TextView
				        android:id="@+id/abilityTwoLabel"
			            android:layout_width="0dip"
			            android:layout_height="wrap_content"
				        android:layout_weight="4"			        
				        android:gravity="right|center_vertical"
				        android:textAppearance="?android:attr/textAppearanceLarge"
				        android:textSize="12sp"
				        android:text="@string/second_ability" />		        
			        
					<View
			        	android:layout_width="0sp"			    
				        android:layout_height="0sp"
				        android:layout_weight="1"
				        android:visibility="invisible"/>
	
				    <Button
				        android:id="@+id/abilityTwo"
			            android:layout_width="0dip"
			            android:layout_height="wrap_content"
				        android:layout_weight="7"			        
				        android:gravity="center"
				        android:textSize="12sp"
				        android:clickable="true"
				        android:onClick="openAbilityTwo" />			
			        				        
			    </LinearLayout>
	
				<View
		        	android:layout_width="0dp"			    
			        android:layout_height="12sp"
			        android:visibility="invisible"/>				    
			    
			    <LinearLayout 
			        android:id="@+id/abilityHiddenCell"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
					android:orientation="horizontal" 
					android:weightSum="12">				    
	
				    <TextView
				        android:id="@+id/abilityHiddenLabel"
			            android:layout_width="0dip"
			            android:layout_height="wrap_content"
				        android:layout_weight="4"		            		        
				        android:gravity="right|center_vertical"
				        android:text="@string/hidden_ability"
				        android:textSize="12sp"  />					
					
					<View
			        	android:layout_width="0sp"			    
				        android:layout_height="0sp"
				        android:layout_weight="1"
				        android:visibility="invisible"/>
	
				    <Button
				        android:id="@+id/abilityHidden"
			            android:layout_width="0dip"
			            android:layout_height="wrap_content"
				        android:layout_weight="7"			            		        
				        android:gravity="center"
				        android:textSize="12sp" 
				        android:clickable="true"
				        android:onClick="openAbilityHidden" />				        
				        
			    </LinearLayout>

		</LinearLayout>
		
	    <LinearLayout
			android:id="@+id/hpRow"	        
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:padding="10sp" >
	        
		    <TextView
		        android:id="@+id/baseHpLabel"
	        	android:text="@string/hp_label"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"	        	
		        android:layout_weight="4"	        	        			        
				style="@style/statAttributeLabel" />
		    
			<View
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_weight="1"
		        android:visibility="invisible"/>		    
		    
			<ProgressBar
			    android:id="@+id/baseHpBar"
			    style="@android:style/Widget.ProgressBar.Horizontal"
			    android:layout_width="0dip"
	        	android:layout_weight="7"		    
			    android:layout_height="wrap_content"
			    android:indeterminate="false"
			    android:maxHeight="10dip"
			    android:minHeight="10dip"
			    android:progress="50"
			    android:progressDrawable="@drawable/progress_green" />	        
	        
	    </LinearLayout>			    
			    	   
	    <LinearLayout
			android:id="@+id/atkRow"	        
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:padding="10sp" >
	        
		    <TextView
		        android:id="@+id/baseAtkLabel"
	        	android:text="@string/attack_label"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"	        	
		        android:layout_weight="4"	        	        			        
				style="@style/statAttributeLabel" />
		    
			<View
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_weight="1"
		        android:visibility="invisible"/>		    
		    
			<ProgressBar
			    android:id="@+id/baseAtkBar"
			    style="@android:style/Widget.ProgressBar.Horizontal"
			    android:layout_width="0dip"
	        	android:layout_weight="7"		    
			    android:layout_height="wrap_content"
			    android:indeterminate="false"
			    android:maxHeight="10dip"
			    android:minHeight="10dip"
			    android:progress="50"
			    android:progressDrawable="@drawable/progress_red" />	        
	        
	    </LinearLayout>
	    
   	    <LinearLayout
			android:id="@+id/defRow"	        
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:padding="10sp" >
	        
		    <TextView
		        android:id="@+id/baseDefLabel"
	        	android:text="@string/defense_label"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"	        	
		        android:layout_weight="4"	        	        			        
				style="@style/statAttributeLabel" />
		    
			<View
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_weight="1"
		        android:visibility="invisible"/>		    
		    
			<ProgressBar
			    android:id="@+id/baseDefBar"
			    style="@android:style/Widget.ProgressBar.Horizontal"
			    android:layout_width="0dip"
	        	android:layout_weight="7"		    
			    android:layout_height="wrap_content"
			    android:indeterminate="false"
			    android:maxHeight="10dip"
			    android:minHeight="10dip"
			    android:progress="50"
			    android:progressDrawable="@drawable/progress_light_green" />	        
	        
	    </LinearLayout>
	    
	    <LinearLayout
			android:id="@+id/spatkRow"	        
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:padding="10sp" >
	        
		    <TextView
		        android:id="@+id/baseSpatkLabel"
	        	android:text="@string/special_attack_label"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"	        	
		        android:layout_weight="4"	        	        			        
				style="@style/statAttributeLabel" />
		    
			<View
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_weight="1"
		        android:visibility="invisible"/>		    
		    
			<ProgressBar
			    android:id="@+id/baseSpatkBar"
			    style="@android:style/Widget.ProgressBar.Horizontal"
			    android:layout_width="0dip"
	        	android:layout_weight="7"		    
			    android:layout_height="wrap_content"
			    android:indeterminate="false"
			    android:maxHeight="10dip"
			    android:minHeight="10dip"
			    android:progress="50"
			    android:progressDrawable="@drawable/progress_light_red" />	        
	        
	    </LinearLayout>
	    
	    <LinearLayout
			android:id="@+id/spdefRow"	        
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:padding="10sp" >
	        
		    <TextView
		        android:id="@+id/baseSpdefLabel"
	        	android:text="@string/special_defense_label"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"	        	
		        android:layout_weight="4"	        	        			        
				style="@style/statAttributeLabel" />
		    
			<View
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_weight="1"
		        android:visibility="invisible"/>		    
		    
			<ProgressBar
			    android:id="@+id/baseSpdefBar"
			    style="@android:style/Widget.ProgressBar.Horizontal"
			    android:layout_width="0dip"
	        	android:layout_weight="7"		    
			    android:layout_height="wrap_content"
			    android:indeterminate="false"
			    android:maxHeight="10dip"
			    android:minHeight="10dip"
			    android:progress="50"
			    android:progressDrawable="@drawable/progress_yellow" />	        
	        
	    </LinearLayout>
	    
	    <LinearLayout
			android:id="@+id/speRow"	        
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:padding="10sp" >
	        
		    <TextView
		        android:id="@+id/baseSpeLabel"
	        	android:text="@string/speed_label"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"	        	
		        android:layout_weight="4"	  
		        style="@style/statAttributeLabel" />
		    
			<View
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_weight="1"
		        android:visibility="invisible"/>		    
		    
			<ProgressBar
			    android:id="@+id/baseSpeBar"
			    style="@android:style/Widget.ProgressBar.Horizontal"
			    android:layout_width="0dip"
	        	android:layout_weight="7"		    
			    android:layout_height="wrap_content"
			    android:indeterminate="false"
			    android:maxHeight="10dip"
			    android:minHeight="10dip"
			    android:progress="50"
			    android:progressDrawable="@drawable/progress_green" />	        
	        
	    </LinearLayout>
	    
	</LinearLayout>		    
		    
</ScrollView>